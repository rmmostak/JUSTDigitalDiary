<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:background="@color/white"
    tools:context=".ui.home.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:id="@+id/adminContact"
            style="@style/cardBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="2dp"
                    android:background="@drawable/circle_green"
                    android:padding="5dp"
                    android:src="@drawable/admin_icon" />

                <TextView
                    android:id="@+id/home01"
                    style="@style/cardTitle"
                    android:text="Admin Office" />

                <View style="@style/view" />

                <TextView
                    style="@style/cardSubTitle"
                    android:text="Contact List" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/facultyContact"
            style="@style/cardBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="2dp"
                    android:background="@drawable/circle_orange"
                    android:padding="5dp"
                    android:src="@drawable/faculty_logo" />

                <TextView
                    style="@style/cardTitle"
                    android:text="Faculty Members" />

                <View style="@style/view" />

                <TextView
                    style="@style/cardSubTitle"
                    android:text="Contact List" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/vehicleTracking"
            style="@style/cardBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="2dp"
                    android:background="@drawable/circle_orange"
                    android:padding="5dp"
                    android:src="@drawable/ic_baseline_location" />

                <TextView
                    style="@style/cardTitle"
                    android:text="Vehicle Tracking" />

                <View style="@style/view" />

                <TextView
                    style="@style/cardSubTitle"
                    android:text="Track campus vehicle" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/notepad"
            style="@style/cardBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="2dp"
                    android:background="@drawable/circle_indigo"
                    android:padding="5dp"
                    android:src="@drawable/ic_write_note" />

                <TextView
                    style="@style/cardTitle"
                    android:text="Notepad" />

                <View style="@style/view" />

                <TextView
                    style="@style/cardSubTitle"
                    android:text="Save and share your note" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/calendar"
            style="@style/cardBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="2dp"
                    android:background="@drawable/circle_orange"
                    android:padding="5dp"
                    android:src="@drawable/ic_calendar" />

                <TextView
                    style="@style/cardTitle"
                    android:text="Calendar" />

                <View style="@style/view" />

                <TextView
                    style="@style/cardSubTitle"
                    android:text="Calendar with events" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/explore"
            style="@style/cardBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/circle_violet"
                    android:padding="5dp"
                    android:src="@drawable/ic_explore" />

                <TextView
                    style="@style/cardTitle"
                    android:text="Explore JUST" />

                <View style="@style/view" />

                <TextView
                    style="@style/cardSubTitle"
                    android:text="JUST Official Pages" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>


    </LinearLayout>

</HorizontalScrollView>
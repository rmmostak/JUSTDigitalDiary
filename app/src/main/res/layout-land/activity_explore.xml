<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Explore.ExploreActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:text="JUST\nExploring"
                android:textAlignment="textEnd"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                tools:ignore="RtlCompat" />

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:contentDescription="App Logo"
                android:padding="5dp"
                android:src="@drawable/logo" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="1dp"
            android:clipToPadding="false"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="1dp"
            android:weightSum="3">

            <androidx.cardview.widget.CardView
                android:id="@+id/portal"
                style="@style/expLandCard">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        style="@style/expLandIcon"
                        android:background="@drawable/circle_green"
                        android:src="@drawable/ic_baseline_link_24" />

                    <TextView
                        style="@style/expLandTitle"
                        android:text="Portal" />

                    <View style="@style/expLandView" />

                    <TextView
                        style="@style/expLandBottom"
                        android:text="Go what do you want!" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/gallery"
                style="@style/expLandCard">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        style="@style/expLandIcon"
                        android:background="@drawable/circle_indigo"
                        android:src="@drawable/ic_menu_gallery" />

                    <TextView
                        style="@style/expLandTitle"
                        android:text="Gallery" />

                    <View style="@style/expLandView" />

                    <TextView
                        style="@style/expLandBottom"
                        android:text="View campus with picture" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/web"
                style="@style/expLandCard">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        style="@style/expLandIcon"
                        android:background="@drawable/circle_orange"
                        android:src="@drawable/ic_baseline_web_24" />

                    <TextView
                        style="@style/expLandTitle"
                        android:text="Web" />


                    <View style="@style/expLandView" />


                    <TextView
                        style="@style/expLandBottom"
                        android:text="View our official website" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>


        </LinearLayout>


    </LinearLayout>

</ScrollView>
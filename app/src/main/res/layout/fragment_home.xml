<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    tools:context=".ui.home.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:padding="5dp">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:contentDescription="App Logo"
                    android:padding="5dp"
                    android:src="@drawable/logo" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="JUST Digital Diary"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"
                    android:textColor="#FF5722"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="1dp"
                android:clipToPadding="false"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="1dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/adminContact"
                    android:layout_width="120dp"
                    android:layout_height="150dp"
                    android:layout_margin="9dp"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardBackgroundColor="#ffffff"
                    app:cardCornerRadius="25dp"
                    app:cardElevation="3dp"
                    app:contentPadding="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_margin="2dp"
                            android:background="@drawable/cerclebackone"
                            android:padding="10dp"
                            android:src="@drawable/admin_icon" />

                        <TextView
                            android:id="@+id/home01"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:fontFamily="@font/calibri"
                            android:gravity="center_horizontal"
                            android:text="Admin Office"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="19dp"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="5dp"
                            android:layout_margin="1dp"
                            android:background="#B1AFA9" />

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/calibri"
                            android:gravity="center"
                            android:padding="3dp"
                            android:text="Contact List"
                            android:textColor="@color/black"
                            android:textSize="14dp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/facultyContact"
                    android:layout_width="120dp"
                    android:layout_height="150dp"
                    android:layout_margin="3dp"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardBackgroundColor="#faf8f8"
                    app:cardCornerRadius="25dp"
                    app:cardElevation="3dp"
                    app:contentPadding="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_margin="2dp"
                            android:background="@drawable/cerclebackthree"
                            android:padding="10dp"
                            android:src="@drawable/faculty_logo" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:fontFamily="@font/calibri"
                            android:gravity="center_horizontal"
                            android:text="Faculty Members"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="19dp"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="5dp"
                            android:layout_margin="1dp"
                            android:background="#899997" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/calibri"
                            android:gravity="center"
                            android:padding="3dp"
                            android:text="Contact List"
                            android:textColor="@color/black"
                            android:textSize="14dp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/vehicleTracking"
                    android:layout_width="120dp"
                    android:layout_height="150dp"
                    android:layout_margin="3dp"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardBackgroundColor="#faf8f8"
                    app:cardCornerRadius="25dp"
                    app:cardElevation="3dp"
                    app:contentPadding="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_margin="2dp"
                            android:background="@drawable/cerclebackthree"
                            android:padding="10dp"
                            android:src="@drawable/ic_baseline_location" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:fontFamily="@font/calibri"
                            android:gravity="center_horizontal"
                            android:text="Vehicle Tracking"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="19dp"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="5dp"
                            android:layout_margin="1dp"
                            android:background="#899997" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/calibri"
                            android:gravity="center"
                            android:padding="3dp"
                            android:text="Track your vehicle"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="14dp" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </HorizontalScrollView>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:gravity="center"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/notepad"
                    android:layout_width="120dp"
                    android:layout_height="150dp"
                    android:layout_margin="9dp"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardBackgroundColor="#fcfbfb"
                    app:cardCornerRadius="25dp"
                    app:cardElevation="3dp"
                    app:contentPadding="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_margin="2dp"
                            android:background="@drawable/cerclebackgroundttt"
                            android:padding="10dp"
                            android:src="@drawable/ic_noteone" />

                        <TextView
                            android:id="@+id/csetext"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:fontFamily="@font/calibri"
                            android:gravity="center_horizontal"
                            android:text="Notepad"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="19dp"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="5dp"
                            android:layout_margin="1dp"
                            android:background="#FB95A795" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/calibri"
                            android:gravity="center"
                            android:padding="3dp"
                            android:text="Save and share your note"
                            android:textColor="@color/black"
                            android:textSize="14dp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/calendar"
                    android:layout_width="120dp"
                    android:layout_height="150dp"
                    android:layout_margin="3dp"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardBackgroundColor="#faf8f8"
                    app:cardCornerRadius="25dp"
                    app:cardElevation="3dp"
                    app:contentPadding="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_margin="2dp"
                            android:background="@drawable/cerclebackthree"
                            android:padding="10dp"
                            android:src="@drawable/ic_dateone" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:fontFamily="@font/calibri"
                            android:gravity="center_horizontal"
                            android:text="Calendar"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="19dp"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="5dp"
                            android:layout_margin="1dp"
                            android:background="#899997" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/calibri"
                            android:gravity="center"
                            android:padding="3dp"
                            android:text="Calender"
                            android:textColor="@color/black"
                            android:textSize="14dp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/explore"
                    android:layout_width="120dp"
                    android:layout_height="150dp"
                    android:layout_margin="10dp"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardBackgroundColor="#FFFFFF"
                    app:cardCornerRadius="25dp"
                    app:cardElevation="3dp"
                    app:contentPadding="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:background="@drawable/cerclebacktwo"
                            android:padding="10dp"
                            android:src="@drawable/ic_explore" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:fontFamily="@font/calibri"
                            android:gravity="center_horizontal"
                            android:text="Explore JUST"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="19dp"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="5dp"
                            android:layout_margin="1dp"
                            android:background="#928E8E" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/calibri"
                            android:gravity="center"
                            android:padding="1dp"
                            android:text="JUST Official Pages"
                            android:textColor="@color/black"
                            android:textSize="14dp" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </HorizontalScrollView>

    </LinearLayout>

</ScrollView>
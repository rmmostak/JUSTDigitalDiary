<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                android:gravity="right"
                android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="JUST\nDigital Diary"
                        android:textAlignment="textEnd"
                        android:textAppearance="@style/TextAppearance.AppCompat.Title"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold"
                        android:layout_marginRight="10dp"
                        tools:ignore="RtlCompat" />

                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_gravity="center"
                        android:contentDescription="App Logo"
                        android:padding="5dp"
                        android:src="@drawable/logo" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="1dp"
                android:clipToPadding="false"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="2"
                android:padding="10dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/adminContact"
                    android:layout_weight="1"
                    style="@style/cardBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_margin="10dp"
                            android:background="@drawable/cerclebackone"
                            android:src="@drawable/admin_icon" />

                        <TextView
                            android:id="@+id/home01"
                            style="@style/cardTitle"
                            android:text="Admin Office" />

                        <!--<View style="@style/view" />

                        <TextView
                            style="@style/cardSubTitle"
                            android:text="Contact List" />-->
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/facultyContact"
                    android:layout_weight="1"
                    style="@style/cardBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_margin="10dp"
                            android:background="@drawable/cerclebackthree"
                            android:src="@drawable/faculty_logo" />

                        <TextView
                            style="@style/cardTitle"
                            android:text="Faculty Members" />

                        <!--<View style="@style/view" />

                        <TextView
                            style="@style/cardSubTitle"
                            android:text="Contact List" />-->
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="1dp"
                android:clipToPadding="false"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="2"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="0dp"
                android:paddingBottom="0dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/vehicleTracking"
                    style="@style/cardBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_margin="10dp"
                            android:background="@drawable/cerclebackthree"
                            android:src="@drawable/ic_baseline_location" />

                        <TextView
                            style="@style/cardTitle"
                            android:text="Vehicle Tracking" />

                        <!--<View style="@style/view" />

                        <TextView
                            style="@style/cardSubTitle"
                            android:text="Track campus vehicle" />-->

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/notepad"
                    style="@style/cardBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_margin="10dp"
                            android:background="@drawable/cerclebackgroundttt"
                            android:src="@drawable/ic_noteone" />

                        <TextView
                            style="@style/cardTitle"
                            android:text="Daily Diary" />

                        <!--<View style="@style/view" />

                        <TextView
                            style="@style/cardSubTitle"
                            android:text="Save and share your note" />-->
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="1dp"
                android:clipToPadding="false"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="2"
                android:padding="10dp">


                <androidx.cardview.widget.CardView
                    android:id="@+id/calendar"
                    style="@style/cardBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_margin="10dp"
                            android:background="@drawable/cerclebackthree"
                            android:src="@drawable/ic_dateone" />

                        <TextView
                            style="@style/cardTitle"
                            android:text="Calendar" />

                        <!--<View style="@style/view" />

                        <TextView
                            style="@style/cardSubTitle"
                            android:text="Calendar with events" />-->
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/explore"
                    style="@style/cardBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:background="@drawable/cerclebacktwo"
                            android:layout_margin="10dp"
                            android:src="@drawable/ic_explore" />

                        <TextView
                            style="@style/cardTitle"
                            android:text="Explore JUST" />

                        <View style="@style/view" />

                        <TextView
                            style="@style/cardSubTitle"
                            android:text="JUST Official Pages" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</ScrollView>